---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Divider from "@components/ui/divider.astro";
---

<Layout title="Acerca de">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Acerca de</Fragment>
      <Fragment slot="desc">Conoce mas de tu universidad.</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-screen-xl mt-10 space-y-7">
      <Divider />
      <p class="text-lg leading-relaxed text-slate-600 text-center">
        Este proyecto está destinado a que conozcas un poco más de tu
        universidad.
        <br />
        <a
          href="https://unab.edu.co/"
          target="_blank"
          rel="noopener"
          class="hover:underline text-orange-500">
          Más información aquí
        </a>.
      </p>
    </div>
  </Container>
</Layout>
